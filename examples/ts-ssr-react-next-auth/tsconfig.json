{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/server"
  ],
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16"
    },
    "esm": true,
    "transpileOnly": true
  }
}
